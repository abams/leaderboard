<div id="hero">
	<%= flash[:notice] %>
	<%= form_tag '/sessions/create' do |f| %>
	  <h1>Create an Account</h1>
	  <p>Username: <%= text_field_tag :username %></p>
	  <p>Email: <%= text_field_tag :email %></p>
	  <p>Password <%= password_field_tag :password %></p>
	  <p>Confirm: <%= password_field_tag :password_confirmation %></p>
	  <%= submit_tag %>
	<% end %>
	<a href="/login"> Have an account? Login</a>
</div>
