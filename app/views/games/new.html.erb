<% counter = 1 %>
<div id='opponents'>
	<h1>Congratulations! Who did you defeat:</h1>
	<table>
	<tr>
		<% @users.each do |u| %>
			<% next if u.id == @current_user.id %>
			<td>
				<%=link_to( image_tag(u.avatar.url(:medium), class: 'avatar'), games_path(@current_user.id, opponent_id: u.id), method: :post, title: u.username )%>
				<p><%= u.username %></p>
			</td>
			<% if counter % 5 == 0 %>
				</tr>
				</table><table>
				<tr>
			<% end %>
			<% counter += 1 %>
		<% end %>
	</tr>
	</table>
</div>
<div id="hero">
	<p>
		<a href="/leaderboard">View Leaderboard</a>
		<a href="/games">View Recent Games</a>
	</p>
</div>

