<div id="leaderboard">
  <table>
    <h1 style="padding-top:15px">Recent Games</h1>
    <th>Win</th><th></th><th></th><th></th><th>Loss</th>
    <% @games.each do |game| %>
      <tr>
        <td><%= link_to((image_tag game.winner.avatar.url(:medium), class: 'avatar-small'), user_path(game.winner)) %></a></td>
        <td><%= link_to game.winner.username, user_path(game.winner), class: 'display-name' %></td>
        <td>vs</td>
        <td><%= link_to game.loser.username, user_path(game.loser), class: 'display-name' %></td>
        <td><%= link_to((image_tag game.loser.avatar.url(:medium), class: 'avatar-small'), user_path(game.loser)) %></a></td>
      </tr>
    <% end %>
  </table>
</div>
<div id="hero">
	<p>
		<a href="/games/new">Create a New Game</a>
		<a href="/leaderboard">View Leaderboard</a>
		</p>
</div>
